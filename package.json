{
  "name": "@adobe/helix-simulator",
  "version": "2.11.2",
  "description": "Helix Testing Environment",
  "repository": "https://github.com/adobe/helix-simulator",
  "main": "src/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "start": "node src/run.js",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 78 --statements 94 --lines 94 mocha",
    "test-ci": "npm run lint && npm run test && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "@adobe/git-server": "0.9.15",
    "@adobe/helix-shared": "0.10.2",
    "colors": "^1.3.0",
    "express": "^4.16.3",
    "fs-extra": "^7.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "nodesi": "^1.8.0",
    "querystring": "^0.2.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "snyk": "^1.134.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "ajv": "^6.5.3",
    "codecov": "^3.0.2",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.12.2",
    "ghooks": "^2.0.4",
    "istanbul": "^1.1.0-alpha.1",
    "lint-staged": "^8.1.5",
    "mocha": "6.1.2",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^13.3.0",
    "semantic-release": "^15.13.3",
    "shelljs": "^0.8.2",
    "uuid": "^3.3.2"
  },
  "snyk": true,
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}

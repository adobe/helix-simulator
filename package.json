{
  "name": "@adobe/helix-simulator",
  "version": "4.1.15",
  "description": "Helix Testing Environment",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-simulator.git"
  },
  "main": "src/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "start": "node src/run.js",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 78 --statements 94 --lines 94 mocha -t 5000",
    "test-win": "mocha --timeout 20000 --reporter xunit test --reporter-options output=junit/test.xml",
    "test-ci": "npm run lint && npm run test && codecov",
    "lint": "./node_modules/.bin/eslint ."
  },
  "dependencies": {
    "@adobe/git-server": "1.1.3",
    "@adobe/helix-log": "4.5.1",
    "@adobe/helix-shared": "7.3.2",
    "colors": "^1.3.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.5",
    "lodash": "^4.17.15",
    "moment": "^2.22.2",
    "nodesi": "^1.13.0",
    "querystring": "^0.2.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@adobe/helix-testutils": "0.3.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.5",
    "ajv": "6.12.2",
    "codecov": "3.6.5",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.0.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.2",
    "ghooks": "2.0.4",
    "istanbul": "1.1.0-alpha.1",
    "lint-staged": "10.2.2",
    "mocha": "7.1.2",
    "mocha-junit-reporter": "1.23.3",
    "nock": "12.0.3",
    "nyc": "15.0.1",
    "semantic-release": "17.0.7",
    "shelljs": "0.8.4",
    "uuid": "8.0.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "bugs": {
    "url": "https://github.com/adobe/helix-simulator/issues"
  },
  "homepage": "https://github.com/adobe/helix-simulator#readme"
}
